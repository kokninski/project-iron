---
// USPStrip: 3â€“4 icon features
interface Feature {
  icon: any;
  title: string;
  description: string;
}
const { features = [] } = Astro.props;
---

<section class="w-full bg-offwhite border-b border-steel/10 py-8">
  <div class="container mx-auto flex flex-col md:flex-row justify-center items-center gap-8">
    {
      features.map(({ icon, title, description }: Feature) => (
        <div class="flex flex-col items-center text-center max-w-xs mx-auto">
          <div class="mb-4 text-accent">{icon}</div>
          <h3 class="text-heading text-xl font-semibold mb-2">{title}</h3>
          <p class="text-body text-steel text-base">{description}</p>
        </div>
      ))
    }
  </div>
</section>
