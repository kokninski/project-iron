---
// Footer component with address, social, and legal links
const socialLinks = [
  { label: 'Facebook', href: 'https://facebook.com/', icon: 'facebook' },
  { label: 'Instagram', href: 'https://instagram.com/', icon: 'instagram' },
  { label: 'X', href: 'https://x.com/', icon: 'x' },
  { label: 'YouTube', href: 'https://youtube.com/', icon: 'youtube' },
];
const legalLinks = [
  { label: 'Polityka prywatności', href: '/legal/privacy' },
  { label: 'Regulamin', href: '/legal/terms' },
  { label: 'Zwroty', href: '/legal/returns' },
  { label: 'Cookies', href: '/legal/cookies' },
];
---

<footer class="bg-steel text-offwhite pt-12 pb-6 mt-16 border-t border-steel/30">
  <div class="container mx-auto px-4 flex flex-col md:flex-row md:justify-between gap-8">
    <!-- Address/Brand -->
    <div>
      <a
        href="/"
        class="flex items-center gap-2 font-display text-2xl font-bold text-accent mb-2 focus-ring"
      >
        <img src="/favicon.svg" alt="Project Iron logo" class="w-8 h-8" />
        Project Iron
      </a>
      <address class="not-italic text-offwhite/80 mt-2">
        ul. Przykładowa 123<br />
        00-000 Warszawa, Polska
      </address>
    </div>

    <!-- Social links -->
    <nav aria-label="Social media" class="flex gap-4 items-center mt-2 md:mt-0">
      {
        socialLinks.map(({ label, href, icon }) => (
          <a
            href={href}
            class="hover:text-accent focus-ring"
            aria-label={label}
            target="_blank"
            rel="noopener noreferrer"
            tabindex="0"
          >
            <span class="sr-only">{label}</span>
            {icon === 'facebook' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 4.991 3.657 9.128 8.438 9.877v-6.987h-2.54v-2.89h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.242 0-1.632.771-1.632 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.128 22 16.991 22 12" />
              </svg>
            )}
            {icon === 'instagram' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 1.366.062 2.633.334 3.608 1.308.974.974 1.246 2.241 1.308 3.608.058 1.266.069 1.646.069 4.85s-.011 3.584-.069 4.85c-.062 1.366-.334 2.633-1.308 3.608-.974.974-2.241 1.246-3.608 1.308-1.266.058-1.646.069-4.85.069s-3.584-.011-4.85-.069c-1.366-.062-2.633-.334-3.608-1.308-.974-.974-1.246-2.241-1.308-3.608C2.175 15.647 2.163 15.267 2.163 12s.012-3.584.07-4.85c.062-1.366.334-2.633 1.308-3.608.974-.974 2.241-1.246 3.608-1.308C8.416 2.175 8.796 2.163 12 2.163zm0-2.163C8.741 0 8.332.014 7.052.072 5.771.13 4.659.363 3.678 1.344 2.697 2.325 2.464 3.437 2.406 4.718.014 8.332 0 8.741 0 12c0 3.259.014 3.668.072 4.948.058 1.281.291 2.393 1.272 3.374.981.981 2.093 1.214 3.374 1.272C8.332 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 1.281-.058 2.393-.291 3.374-1.272.981-.981 1.214-2.093 1.272-3.374.058-1.28.072-1.689.072-4.948 0-3.259-.014-3.668-.072-4.948-.058-1.281-.291-2.393-1.272-3.374-.981-.981-2.093-1.214-3.374-1.272C15.668.014 15.259 0 12 0z" />
                <path d="M12 5.838A6.162 6.162 0 0 0 5.838 12 6.162 6.162 0 0 0 12 18.162 6.162 6.162 0 0 0 18.162 12 6.162 6.162 0 0 0 12 5.838zm0 10.162A3.999 3.999 0 1 1 12 8a3.999 3.999 0 0 1 0 7.999zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z" />
              </svg>
            )}
            {icon === 'x' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.53 2.477h3.924l-8.56 9.85 10.08 13.196h-7.96l-6.24-8.23-7.16 8.23H.09l9.12-10.5L0 2.477h8.08l5.68 7.49z" />
              </svg>
            )}
            {icon === 'youtube' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a2.994 2.994 0 0 0-2.112-2.112C19.5 3.5 12 3.5 12 3.5s-7.5 0-9.386.574A2.994 2.994 0 0 0 .502 6.186C0 8.072 0 12 0 12s0 3.928.502 5.814a2.994 2.994 0 0 0 2.112 2.112C4.5 20.5 12 20.5 12 20.5s7.5 0 9.386-.574a2.994 2.994 0 0 0 2.112-2.112C24 15.928 24 12 24 12s0-3.928-.502-5.814zM9.75 15.5v-7l6.5 3.5-6.5 3.5z" />
              </svg>
            )}
          </a>
        ))
      }
    </nav>

    <!-- Legal links -->
    <nav
      aria-label="Linki prawne"
      class="flex flex-col gap-2 mt-4 md:mt-0 text-offwhite/80 text-sm"
    >
      {
        legalLinks.map(({ label, href }) => (
          <a href={href} class="hover:text-accent focus-ring" tabindex="0">
            {label}
          </a>
        ))
      }
    </nav>
  </div>
  <div class="container mx-auto px-4 mt-8 text-center text-xs text-offwhite/60">
    &copy; {new Date().getFullYear()} Project Iron. Wszelkie prawa zastrzeżone.
  </div>
  <!-- Private link -->
  <div class="container mx-auto px-4 mt-4 text-center">
    <a href="/private" class="text-offwhite/80 hover:text-accent focus-ring">
      Private
    </a>
  </div>
</footer>
