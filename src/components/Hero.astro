---
// Hero component: full-bleed background image (slot), headline, subhead, primary + secondary CTAs
interface Props {
  headline: string;
  subhead?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}
const { headline, subhead, primaryCta, secondaryCta } = Astro.props;
---

<section class="relative w-full min-h-[60vh] flex items-center justify-center overflow-hidden">
  <!-- Background image slot -->
  <div class="absolute inset-0 w-full h-full z-0">
    <slot name="bg" />
    <div class="absolute inset-0 bg-charcoal/60" aria-hidden="true"></div>
  </div>
  <div
    class="relative z-10 container mx-auto px-4 py-24 text-center flex flex-col items-center justify-center"
  >
    <h1 class="text-heading text-4xl md:text-6xl font-bold text-offwhite mb-6 drop-shadow-lg">
      {headline}
    </h1>
    {
      subhead && (
        <p class="text-body text-xl md:text-2xl text-offwhite/90 mb-10 max-w-2xl mx-auto">
          {subhead}
        </p>
      )
    }
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href={primaryCta.href} class="btn btn-primary text-lg px-8 py-4">{primaryCta.label}</a>
      {
        secondaryCta && (
          <a href={secondaryCta.href} class="btn btn-secondary text-lg px-8 py-4">
            {secondaryCta.label}
          </a>
        )
      }
    </div>
  </div>
</section>
